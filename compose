version: '3'

services:
    # Frontend
  web:
    # Image was: jitsi/web:stable-5870
    image: "docker.software-univention.de/jitsimeet-web:stable-5870"
    restart: always
    ports:
    - 8888:80
    container_name: jitsimeet_web
    volumes:
    - /var/lib/univention-appcenter/apps/jitsimeet/config/web:/config
    - /var/lib/univention-appcenter/apps/jitsimeet/config/web/letsencrypt:/etc/letsencrypt
    - /var/lib/univention-appcenter/apps/jitsimeet/config/transcripts:/usr/share/jitsi-meet/transcripts
    networks:
      meet.jitsi:
        aliases:
        - meet.jitsi  

    # XMPP server, a
  prosody:
    # Image was: jitsi/prosody:stable-5870
    image: "docker.software-univention.de/jitsimeet-prosody:stable-5870"
    restart: always
    expose:
    - '5222'
    - '5347'
    - '5280'
    volumes:
    - /var/lib/univention-appcenter/apps/jitsimeet/config/prosody:/config
    - /etc/ssl/certs/ca-certificates.crt:/etc/ssl/certs/ca-certificates.crt:ro
    networks:
      meet.jitsi:
        aliases:
        - xmpp.meet.jitsi

    # Focus component
  jicofo:
    # Image was: jitsi/jicofo:stable-5870
    image: "docker.software-univention.de/jitsimeet-jicofo:stable-5870"
    restart: always
    volumes:
    - /var/lib/univention-appcenter/apps/jitsimeet/config/jicofo:/config
    depends_on:
    - prosody
    networks:
      meet.jitsi:

    # Video bridge
  jvb:
    # Image was: jitsi/jvb:stable-5870
    image: "docker.software-univention.de/jitsimeet-jvb:stable-5870"
    restart: always
    ports:
    - 10000:10000/udp
    - '4443:4443'
    volumes:
    - /var/lib/univention-appcenter/apps/jitsimeet/config/jvb:/config
    depends_on:
    - prosody
    networks:
      meet.jitsi:

# Custom network so all services can communicate using a FQDN
networks:
  meet.jitsi: